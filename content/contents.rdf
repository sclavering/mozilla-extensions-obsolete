<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:c="http://www.mozilla.org/rdf/chrome#">

  <Seq about="urn:mozilla:package:root">
    <li resource="urn:mozilla:package:flowtabs"/>
  </Seq>

  <Description about="urn:mozilla:package:flowtabs"
      c:displayName="Flowing Tabs"
      c:author="Stephen Clavering"
      c:name="flowtabs"
      c:description="Makes the browser tabs use multiple rows when there are too many to fit on a single row"
      c:extension="true"
      />

  <!-- the overlay just provides a stylesheet -->
  <Seq about="urn:mozilla:overlays">
    <li resource="chrome://browser/content/browser.xul"/>
    <li resource="chrome://navigator/content/navigator.xul"/>
  </Seq>
  <Seq about="chrome://browser/content/browser.xul">
    <li>chrome://flowtabs/content/</li>
  </Seq>
  <Seq about="chrome://navigator/content/navigator.xul">
    <li>chrome://flowtabs/content/</li>
  </Seq>

</RDF>
