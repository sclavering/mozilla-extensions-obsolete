<?xml version="1.0"?>
<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

  <RDF:Seq about="urn:mozilla:package:root">
    <RDF:li resource="urn:mozilla:package:flowtabs"/>
  </RDF:Seq>

  <RDF:Description about="urn:mozilla:package:flowtabs"
      chrome:displayName="Flowing Tabs"
      chrome:author="Stephen Clavering"
      chrome:name="flowtabs"
      chrome:description="Makes the browser tabs use multiple rows when there are too many to fit on a single row"
      chrome:extension="true"
      />

  <!-- the overlay just provides a stylesheet -->
  <RDF:Seq about="urn:mozilla:overlays">
    <RDF:li resource="chrome://browser/content/browser.xul"/>
  </RDF:Seq>
  <RDF:Seq about="chrome://browser/content/browser.xul">
    <RDF:li>chrome://flowtabs/content/</RDF:li>
  </RDF:Seq>

</RDF:RDF>
